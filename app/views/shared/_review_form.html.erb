<%= form_for @review, remote: true do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.hidden_field :book_id, value: book.id, within: 1..10 %>
      <%= f.number_field :rate, value: @review.rate, id: "rate", required: true, within: 1..10 %>
      <%= f.text_area :content, rows: 3, placeholder: t(:addreview), required: true,
        class: "form-control form-margin", id: "review_content_#{book.id}" %>
    </div>
    <div class="col-md-2">
      <%= f.submit t(:submit), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
