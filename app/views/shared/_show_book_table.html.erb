<th scope=row><%= link_to book.id, book %></th>
<td>
  <%= link_to image_tag(book.picture.url, alt: "Book image", width: 100,
    height: 100), book %>
</td>
<td><%= link_to book.title, book %></td>
<td><%= book.category.name %></td>
<td><%= book.author %></td>
<td><%= book.publish_date %></td>
<td><%= book.number_pages %></td>
<td><%= book.created_at.strftime t :timetype %></td>
<td>
  <% if book.rating > 0.0 %>
    <%= book.rating %>
  <% end %>
</td>
