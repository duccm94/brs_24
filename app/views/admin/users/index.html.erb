<% provide :title, t("allusers") %>
<h1><%= t :allusers %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope=row><%= link_to user.id, user %></th>
        <td><%= link_to user.name, user %></td>
        <td><%= link_to user.email, user %></td>
        <td><%= link_to t(:edituser), edit_admin_user_path(user),
          class: "btn btn-primary" %></td>
        <td><%= link_to t(:delete), [:admin, user], method: :delete,
          data: {confirm: t(:areyousure)}, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
